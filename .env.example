# 服务器配置
NODE_ENV=development
PORT=3000

# ocloudview API配置
OCLOUDVIEW_API_URL=http://192.168.40.161:8088
OCLOUDVIEW_API_KEY=your_api_key_here

# JWT配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# WebSocket配置
WEBSOCKET_PORT=6080
WEBSOCKET_PATH=/vnc

# VNC配置
VNC_PASSWORD_ENCRYPTION=true

# 连接超时配置（毫秒）
# 对于高延迟网络场景，建议设置更长的超时时间
# SPICE 协议需要建立多达 17+ 个通道，在高延迟场景下需要足够的时间
# 默认: 30000 (30秒)
# 高延迟场景建议: 60000-120000 (60-120秒)
CONNECTION_TIMEOUT=30000

# 数据库配置（如需要）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=novnc_ocloudview
DB_USER=root
DB_PASSWORD=

# Redis配置（用于会话管理）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
